<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:background="@drawable/free_dialog_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="8dp"
            android:background="@drawable/circle_search_background">
            <EditText
                android:id="@+id/map_edt_content"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:hint="请输入MapID"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                />
            <ImageView
                android:id="@+id/clear_map_content"
                android:layout_gravity="center"
                android:src="@mipmap/icon_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/input_cancel"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="120dp"
                android:text="取消"
                android:textColor="#078bd7"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/input_ensure"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="19dp"
                android:background="@null"
                android:singleLine="true"
                android:text="确认"
                android:textColor="#078bd7"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>